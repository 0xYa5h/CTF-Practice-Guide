<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".foren_q5">

    <TextView
        android:id="@+id/head_fq5"
        android:layout_width="166dp"
        android:layout_height="50dp"
        android:text="I'm a Dump"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        android:enabled="true"
        android:textIsSelectable="true"
        android:longClickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002" />

    <TextView
        android:id="@+id/chal_f5"
        android:layout_width="389dp"

        android:layout_height="199dp"
        android:layout_marginBottom="444dp"
        android:text="The keyword is hexadecimal, and removing an useless H.E.H.U.H.E. from the flag"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:enabled="true"
        android:textIsSelectable="true"
        android:longClickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_fq5"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/point_fq5"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:text="10 Points"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:enabled="true"
        android:textIsSelectable="true"
        android:longClickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/chal_f5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toEndOf="@+id/head_fq5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <EditText
        android:id="@+id/ans_fq5"
        android:layout_width="383dp"
        android:layout_height="233dp"
        android:layout_marginBottom="120dp"
        android:ems="10"
        android:hint="Answer"
        android:textIsSelectable="true"
        android:longClickable="true"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_fq5"
        app:layout_constraintVertical_bias="0.875" />

    <Button
        android:id="@+id/sub_fq5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ACC1"
        android:text="Submit"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans_fq5"
        app:layout_constraintVertical_bias="0.403" />


</androidx.constraintlayout.widget.ConstraintLayout>