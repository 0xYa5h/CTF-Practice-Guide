<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="About"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />



    <TextView
        android:id="@+id/aboutext"
        android:layout_width="408dp"
        android:layout_height="318dp"
        android:text="This app is made to boost the learning process of the concepts of Cyber-Security. It is designed so that anyone can practise anytime the only requirement being android phone and will to learn."
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tbabout"
        app:layout_constraintVertical_bias="0.536" />

    <TextView
        android:id="@+id/versionabout"
        android:layout_width="428dp"
        android:layout_height="44dp"
        android:text="Version: 0.0.1"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvabout"
        app:layout_constraintVertical_bias="0.726" />

    <ImageView
        android:id="@+id/iconimage"
        android:layout_width="177dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/aboutext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvabout"
        app:layout_constraintVertical_bias="0.482"
        app:srcCompat="@mipmap/ic0n" />

</androidx.constraintlayout.widget.ConstraintLayout>