<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".rev_q2">

    <TextView
        android:id="@+id/head_rq2"
        android:layout_width="193dp"
        android:layout_height="86dp"
        android:text="Basic Android RE 1"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        android:enabled="true"
        android:textIsSelectable="true"
        android:longClickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002" />

    <TextView
        android:id="@+id/chal_rq2"
        android:layout_width="389dp"
        android:layout_height="199dp"
        android:layout_marginBottom="472dp"
        android:text="A simple APK, reverse engineer the logic, recreate the flag, and submit! https://bit.ly/3leIcyL"
        android:textColor="@android:color/background_dark"
        android:enabled="true"
        android:textIsSelectable="true"
        android:longClickable="true"
        android:focusable="true"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_rq1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/point_rq2"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:text="10 Points"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:enabled="true"
        android:textIsSelectable="true"
        android:longClickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/chal_rq1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toEndOf="@+id/head_rq2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <EditText
        android:id="@+id/ans_rq2"
        android:layout_width="388dp"
        android:layout_height="215dp"
        android:layout_marginBottom="120dp"
        android:ems="10"
        android:hint="Answer"
        android:textIsSelectable="true"
        android:longClickable="true"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_rq2"
        app:layout_constraintVertical_bias="0.748" />

    <Button
        android:id="@+id/sub_rq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00ACC1"
        android:text="Submit"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans_rq2"
        app:layout_constraintVertical_bias="0.546" />


</androidx.constraintlayout.widget.ConstraintLayout>